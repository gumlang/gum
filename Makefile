# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=release
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),release)
  libgum_config = release
  gob_config = release
endif
ifeq ($(config),debug)
  libgum_config = debug
  gob_config = debug
endif

PROJECTS := libgum gob

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

libgum:
ifneq (,$(libgum_config))
	@echo "==== Building libgum ($(libgum_config)) ===="
	@${MAKE} --no-print-directory -C . -f libgum.make config=$(libgum_config)
endif

gob: libgum
ifneq (,$(gob_config))
	@echo "==== Building gob ($(gob_config)) ===="
	@${MAKE} --no-print-directory -C . -f gob.make config=$(gob_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f libgum.make clean
	@${MAKE} --no-print-directory -C . -f gob.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  release"
	@echo "  debug"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   libgum"
	@echo "   gob"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"